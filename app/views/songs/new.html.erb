<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist %>
  <%= f.text_field :artist_name %>
  <br />

  <%= f.label :genre %>
  <%= f.collection_select :genre_id, @genres, :id, :name %>
  <br />
  <br />

  <div>Notes</div>

  <% 4.times do |index| %>
    <input type="text" name="song[note_contents][]" id="song_notes_<%= index + 1 %>">
    <br />
  <% end %>
  <br />

  <%= f.submit %>
<% end %>
